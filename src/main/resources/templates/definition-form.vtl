<p>Add a new definition:</p>

<form action="/definitions" method="post">
	  <input id="wordId" name="wordId" type="hidden" value="$word.getId()">

	  <div class="form-group">
	  	<label for="description">Enter word definition</label>
	  	<input id="description" name="description" type="text" class="form-control">
		</div>

	  <button type="submit" class="btn btn-default">Add Definition</button>
	</form>
